@model IEnumerable<StoreMVC.Models.Cycle>
@{
    ViewBag.Title = "Cycles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cycles</h2>

@Html.ActionLink("New Cycle","New","Cycles", new { @class = "btn btn-primary"})

@if (!Model.Any())
{
    <p>We don't have any Bicycles left at the moment.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Bicycle</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Cycle in Model)
            {
                <tr>
                    <td>@Html.ActionLink(Cycle.Name,"Edit","Cycles",new { id = Cycle.Id},null)</td>
                    <td>@Cycle.BikeType.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
